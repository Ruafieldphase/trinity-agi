"""A script containing refactored utility functions."""
import typing


def print_greeting():
    """Prints a standard greeting."""
    print("hello world")


def add_and_print(num1: int, num2: int):
    """
    Calculates the sum of two numbers and prints the result.

    Args:
        num1: The first number to add.
        num2: The second number to add.
    """
    print(num1 + num2)


def print_items(*items: typing.Any):
    """
    Prints any number of items on a single line, separated by spaces.

    Args:
        *items: A variable number of items to print.
    """
    print(*items)


def main():
    """Runs the original sequence of operations using the refactored functions."""
    # Replicates the behavior of the original print_greeting_and_sum()
    print_greeting()
    add_and_print(1, 2)

    # Replicates the behavior of the original print_variables()
    print_items(1, 2, 3)


if __name__ == "__main__":
    main()