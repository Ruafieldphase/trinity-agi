{
    "python.defaultInterpreterPath": "${workspaceFolder}/LLM_Unified/.venv/Scripts/python.exe",
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.memory.keepLibraryAst": false,
    "python.analysis.indexing": false,
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.venv": true,
        "**/node_modules": true,
        "outputs": true,
        "**/*.jsonl": true
    },
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "outputs": true,
        "**/*.jsonl": true,
        "**/dist": true,
        "**/build": true
    },
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/node_modules/**": true,
        "outputs/**": true,
        "**/*.jsonl": true,
        "**/__pycache__/**": true
    },
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "jupyter.askForKernelRestart": false,
    "jupyter.jupyterServerType": "local",
    "python.terminal.activateEnvironment": false,
    // ?�� ?��????�동 ?�커??비활?�화
    "terminal.integrated.automationProfile.windows": null,
    "terminal.integrated.focusAfterRun": "none",
    "task.autoDetect": "off",
    "task.alwaysRevealTaskTerminal": false,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.env.windows": {
        "PYTHONIOENCODING": "utf-8",
        "PYTHONUTF8": "1"
    },
    "files.encoding": "utf8",
    "claudeCode.useTerminal": true,
    // ?�� AGI ?�션 ?�동 ?�작
    "window.restoreWindows": "all",
    "workbench.startupEditor": "readme",
    // Gitko: Enable HTTP Poller 명령??VS Code ?�작 ???�동 ?�행
    "auto-run-command.commands": [
        {
            "command": "gitko.enableHttpPoller",
            "args": []
        },
        {
            "command": "workbench.action.tasks.runTask",
            "args": [
                "AGI: Auto Resume on Workspace Open"
            ]
        }
    ],
    // Gitko HTTP Poller ?�정
    "gitko.enableHttpPoller": true,
    "gitko.httpApiBase": "http://127.0.0.1:8091/api",
    "gitko.httpPollingInterval": 2000,
    // ?? Task Queue Server ?�동 ?�작 (Workspace ?�릴 ??
    "task.runOnFolderOpen": "?�� Comet-Gitko: Start Task Queue Server (Background)",
    // Fonts with CJK + Emoji coverage to avoid tofu/missing glyphs
    "editor.fontFamily": "Cascadia Code, '맑은 고딕', 'Segoe UI Emoji', Consolas, 'Courier New', monospace",
    "terminal.integrated.fontFamily": "Cascadia Code, '맑은 고딕', 'Segoe UI Emoji', Consolas, 'Courier New', monospace",
    // GitHub Copilot Performance Optimization
    "github.copilot.enable": {
        "*": true,
        "jsonl": false,
        "log": false,
        "csv": false,
        "plaintext": false,
        "markdown": false
    },
    "github.copilot.advanced": {
        "debug.overrideEngine": "gpt-4",
        "inlineSuggestCount": 1
    },
    // Additional Performance Optimizations
    "search.followSymlinks": false,
    "search.maxResults": 10000,
    "files.maxMemoryForLargeFilesMB": 2048,
    "git.decorations.enabled": false,
    "git.autorefresh": false,
    "git.enabled": true,
    "extensions.autoUpdate": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.smoothScrolling": false,
    "editor.cursorSmoothCaretAnimation": "off",
    "workbench.list.smoothScrolling": false,
    "terminal.integrated.smoothScrolling": false,
    // Prevent Python Process Leaks
    "python.terminal.executeInFileDir": false,
    "python.terminal.launchArgs": [],
    "python.experiments.enabled": false,
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": [],
    "python.analysis.memory.keepLibraryLocalVariables": false,
    // Disable annoying extension recommendations
    "extensions.ignoreRecommendations": true,
    "remote.autoForwardPorts": false,
    "docker.showRemoteWorkspaceWarning": false
}