{
    "python.defaultInterpreterPath": "${workspaceFolder}/.venv/Scripts/python.exe",
    "python.analysis.typeCheckingMode": "off",
    "python.analysis.autoImportCompletions": false,
    "python.analysis.memory.keepLibraryAst": false,
    "python.analysis.indexing": false,
    "python.linting.enabled": false,
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "black",
    "editor.formatOnSave": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.venv": true,
        "**/node_modules": true,
        "outputs": true,
        "**/*.jsonl": true,
        "ai_binoche_conversation_origin": true,
        "music": true,
        "backups": true,
        "session_memory": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/htmlcov": true,
        "**/*.egg-info": true
    },
    "search.exclude": {
        "**/.venv": true,
        "**/node_modules": true,
        "outputs": true,
        "**/*.jsonl": true,
        "**/dist": true,
        "**/build": true,
        "ai_binoche_conversation_origin": true,
        "music": true,
        "backups": true,
        "session_memory": true,
        "fdo_agi_repo/memory": true,
        "**/__pycache__": true,
        "**/*.pyc": true,
        "**/.pytest_cache": true,
        "**/htmlcov": true,
        "**/*.egg-info": true,
        "**/wheels": true,
        "**/lib64": true,
        "fdo_agi_repo/.venv": true
    },
    "files.watcherExclude": {
        "**/.venv/**": true,
        "**/node_modules/**": true,
        "outputs/**": true,
        "**/*.jsonl": true,
        "**/__pycache__/**": true,
        "ai_binoche_conversation_origin/**": true,
        "music/**": true,
        "backups/**": true,
        "session_memory/**": true,
        "fdo_agi_repo/memory/**": true,
        "**/.pytest_cache/**": true,
        "**/htmlcov/**": true,
        "**/*.pyc": true,
        "**/*.pyo": true,
        "**/*.egg-info/**": true,
        "fdo_agi_repo/.venv/**": true,
        "LLM_Unified/.venv/**": true,
        "**/dist/**": true,
        "**/build/**": true
    },
    // Gitko Agent backend integration paths (set by Copilot)
    // If these paths are incorrect, Gitko may fail with invalid_request_body (400)
    // because the extension cannot execute the CLI and returns empty/invalid JSON.
    // Adjust to your actual workspace layout if different.
    "gitkoAgent.pythonPath": "C:/workspace/agi/.venv/Scripts/python.exe",
    "gitkoAgent.scriptPath": "C:/workspace/agi/LLM_Unified/ion-mentoring/gitko_cli.py",
    "gitkoAgent.workingDirectory": "C:/workspace/agi/LLM_Unified/ion-mentoring",
    // Optional diagnostics
    "gitkoAgent.enableLogging": true,
    // Optional: increase if large contexts are processed via Copilot tools bridge
    "gitkoAgent.timeout": 120000,
    "python.testing.pytestEnabled": true,
    "python.testing.unittestEnabled": false,
    "python.testing.nosetestsEnabled": false,
    "jupyter.askForKernelRestart": false,
    "jupyter.jupyterServerType": "local",
    "python.terminal.activateEnvironment": false,
    // ?�� ?��????�동 ?�커??비활?�화
    "terminal.integrated.automationProfile.windows": null,
    "terminal.integrated.focusAfterRun": "none",
    "task.autoDetect": "off",
    "task.alwaysRevealTaskTerminal": false,
    "terminal.integrated.defaultProfile.windows": "PowerShell",
    "terminal.integrated.env.windows": {
        "PYTHONIOENCODING": "utf-8",
        "PYTHONUTF8": "1"
    },
    "files.encoding": "utf8",
    "claudeCode.useTerminal": true,
    // ?�� AGI ?�션 ?�동 ?�작
    "window.restoreWindows": "all",
    "workbench.startupEditor": "readme",
    // Gitko: Enable HTTP Poller 명령??VS Code ?�작 ???�동 ?�행
    "auto-run-command.commands": [
        {
            "command": "gitko.enableHttpPoller",
            "args": []
        },
        {
            "command": "workbench.action.tasks.runTask",
            "args": [
                "AGI: Auto Resume on Workspace Open"
            ]
        }
    ],
    // Gitko HTTP Poller ?�정
    "gitko.enableHttpPoller": true,
    "gitko.httpApiBase": "http://127.0.0.1:8091/api",
    "gitko.httpPollingInterval": 2000,
    // ?? Task Queue Server ?�동 ?�작 (Workspace ?�릴 ??
    "task.runOnFolderOpen": "?�� Comet-Gitko: Start Task Queue Server (Background)",
    // Fonts with CJK + Emoji coverage to avoid tofu/missing glyphs
    "editor.fontFamily": "Cascadia Code, '맑은 고딕', 'Segoe UI Emoji', Consolas, 'Courier New', monospace",
    "terminal.integrated.fontFamily": "Cascadia Code, '맑은 고딕', 'Segoe UI Emoji', Consolas, 'Courier New', monospace",
    // GitHub Copilot Performance Optimization
    "github.copilot.enable": {
        "*": true,
        "jsonl": false,
        "log": false,
        "csv": false,
        "plaintext": false,
        "markdown": false
    },
    "github.copilot.advanced": {
        "debug.overrideEngine": "gpt-4",
        "inlineSuggestCount": 1,
        "debug.filterLogCategories": [],
        "length": 500
    },
    // Additional Performance Optimizations
    "search.followSymlinks": false,
    "search.maxResults": 10000,
    "files.maxMemoryForLargeFilesMB": 2048,
    "git.decorations.enabled": false,
    "git.autorefresh": false,
    "git.enabled": true,
    "extensions.autoUpdate": false,
    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": false
    },
    "editor.smoothScrolling": false,
    "editor.cursorSmoothCaretAnimation": "off",
    "workbench.list.smoothScrolling": false,
    "terminal.integrated.smoothScrolling": false,
    // Prevent Python Process Leaks
    "python.terminal.executeInFileDir": false,
    "python.terminal.launchArgs": [],
    "python.experiments.enabled": false,
    "python.languageServer": "Pylance",
    "python.analysis.extraPaths": [],
    "python.analysis.memory.keepLibraryLocalVariables": false,
    // Disable annoying extension recommendations
    "extensions.ignoreRecommendations": true,
    "remote.autoForwardPorts": false,
    "docker.showRemoteWorkspaceWarning": false,
    // Performance: Reduce file indexing overhead
    "typescript.disableAutomaticTypeAcquisition": true,
    "javascript.suggest.enabled": false,
    "html.suggest.html5": false,
    "css.lint.enabled": false,
    // Performance: Reduce IntelliSense overhead
    "editor.suggest.snippetsPreventQuickSuggestions": true,
    "editor.suggest.localityBonus": false,
    "editor.suggest.shareSuggestSelections": false,
    // Performance: Reduce validation overhead
    "json.validate.enable": false,
    "css.validate": false,
    "html.validate.scripts": false,
    "html.validate.styles": false,
    // Performance: Reduce file watching overhead
    "files.watcherExcludeMaxFileSize": 1024,
    "files.hotExit": "off",
    "files.autoSave": "off",
    // Markdown Folding & Outline Settings
    "[markdown]": {
        "editor.folding": true,
        "editor.foldingStrategy": "indentation",
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "other": false,
            "comments": false,
            "strings": false
        },
        "editor.formatOnSave": false,
        "editor.renderWhitespace": "none"
    },
    "markdown.preview.scrollPreviewWithEditor": true,
    "markdown.preview.scrollEditorWithPreview": true,
    "markdown.preview.doubleClickToSwitchToEditor": true,
    "outline.showFiles": true,
    "outline.showModules": true,
    "breadcrumbs.enabled": true,
    "breadcrumbs.symbolPath": "on"
}