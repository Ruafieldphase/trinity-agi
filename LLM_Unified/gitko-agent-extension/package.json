{
    "name": "gitko-agent-extension",
    "displayName": "Gitko AI Agent Orchestrator",
    "description": "Multi-agent orchestration for GitHub Copilot Chat with real-time monitoring",
    "version": "0.3.1",
    "publisher": "naeda",
    "engines": {
        "vscode": "^1.90.0"
    },
    "categories": [
        "AI",
        "Chat"
    ],
    "activationEvents": [
        "onLanguageModelTool:sian_refactor",
        "onLanguageModelTool:lubit_review",
        "onLanguageModelTool:gitko_orchestrate",
        "onChatParticipant:gitko-agent"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "gitko.enableHttpPoller",
                "title": "Gitko: Enable HTTP Poller",
                "category": "Gitko"
            },
            {
                "command": "gitko.disableHttpPoller",
                "title": "Gitko: Disable HTTP Poller",
                "category": "Gitko"
            },
            {
                "command": "gitko.showPollerOutput",
                "title": "Gitko: Show HTTP Poller Output",
                "category": "Gitko"
            },
            {
                "command": "gitko.showTaskQueueMonitor",
                "title": "Gitko: Show Task Queue Monitor",
                "category": "Gitko",
                "icon": "$(pulse)"
            },
            {
                "command": "gitko.showResonanceLedger",
                "title": "Gitko: Show Resonance Ledger",
                "category": "Gitko",
                "icon": "$(graph)"
            },
            {
                "command": "gitko.computerUse.clickByText",
                "title": "Gitko: Computer Use - Click by Text",
                "category": "Gitko"
            },
            {
                "command": "gitko.computerUse.scanScreen",
                "title": "Gitko: Computer Use - Scan Screen",
                "category": "Gitko"
            },
            {
                "command": "gitko.validateConfig",
                "title": "Gitko: Validate Configuration",
                "category": "Gitko",
                "icon": "$(check)"
            },
            {
                "command": "gitko.showPerformanceViewer",
                "title": "Gitko: Show Performance Monitor",
                "category": "Gitko",
                "icon": "$(dashboard)"
            },
            {
                "command": "gitko.showActivityViewer",
                "title": "Gitko: Show Activity Tracker",
                "category": "Gitko",
                "icon": "$(pulse)"
            },
            {
                "command": "gitko.runIntegrationTests",
                "title": "Gitko: Run Integration Tests",
                "category": "Gitko",
                "icon": "$(testing-run-icon)"
            },
            {
                "command": "gitko.dev.healthCheck",
                "title": "Gitko Dev: Health Check",
                "category": "Gitko Dev"
            },
            {
                "command": "gitko.dev.exportDiagnostics",
                "title": "Gitko Dev: Export Diagnostics",
                "category": "Gitko Dev"
            },
            {
                "command": "gitko.dev.showMemoryStats",
                "title": "Gitko Dev: Show Memory Stats",
                "category": "Gitko Dev"
            },
            {
                "command": "gitko.security.toggleKillswitch",
                "title": "Gitko Security: Toggle Computer Use Killswitch",
                "category": "Gitko Security",
                "icon": "$(shield)"
            },
            {
                "command": "gitko.security.exportAuditLog",
                "title": "Gitko Security: Export Audit Log",
                "category": "Gitko Security",
                "icon": "$(file-text)"
            },
            { "command": "gitko.setQueueMode.poll", "title": "Gitko: Switch Queue Mode to Polling", "category": "Gitko" },
            { "command": "gitko.setQueueMode.sse", "title": "Gitko: Switch Queue Mode to SSE", "category": "Gitko" },
            { "command": "gitko.toggleQueueMode", "title": "Gitko: Toggle Queue Mode (SSE/Poll)", "category": "Gitko" }
        ],
        "languageModelTools": [
            {
                "name": "sian_refactor",
                "displayName": "Sian Code Refactoring",
                "modelDescription": "Refactors and improves code quality. Use when user wants to clean up, optimize, or modernize code.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "message": {
                            "type": "string",
                            "description": "User request for code improvement"
                        }
                    },
                    "required": [
                        "message"
                    ]
                }
            },
            {
                "name": "lubit_review",
                "displayName": "Lubit Code Review",
                "modelDescription": "Reviews code for bugs, security issues, and best practices. Use when user asks for code review or security check.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "message": {
                            "type": "string",
                            "description": "User request for code review"
                        }
                    },
                    "required": [
                        "message"
                    ]
                }
            },
            {
                "name": "gitko_orchestrate",
                "displayName": "Gitko Orchestrator",
                "modelDescription": "Orchestrates complex tasks using multiple agents. Use for comprehensive project improvements or multi-step tasks.",
                "inputSchema": {
                    "type": "object",
                    "properties": {
                        "message": {
                            "type": "string",
                            "description": "User request for complex task"
                        }
                    },
                    "required": [
                        "message"
                    ]
                }
            }
        ],
        "chatParticipants": [
            {
                "id": "gitko-agent",
                "name": "gitko",
                "description": "AI agent orchestrator with Lubit and Sian",
                "isSticky": true,
                "commands": [
                    {
                        "name": "review",
                        "description": "Review code with Lubit agent"
                    },
                    {
                        "name": "improve",
                        "description": "Suggest improvements with Sian agent"
                    },
                    {
                        "name": "parallel",
                        "description": "Run both Lubit and Sian in parallel"
                    },
                    {
                        "name": "help",
                        "description": "Show help and configuration guide"
                    },
                    {
                        "name": "check",
                        "description": "Verify Python environment configuration"
                    }
                ]
            }
        ],
        "configuration": {
            "title": "Gitko Agent",
            "properties": {
                "gitkoAgent.pythonPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to Python executable (leave empty for auto-detection)",
                    "order": 1
                },
                "gitko.otel.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Export PerformanceMonitor spans/metrics to OTLP endpoint",
                    "order": 35
                },
                "gitko.otel.endpoint": {
                    "type": "string",
                    "default": "http://localhost:4318",
                    "description": "OTLP endpoint base URL (e.g., http://localhost:4318)",
                    "order": 36
                },
                "gitko.otel.headerName": {
                    "type": "string",
                    "default": "Authorization",
                    "description": "Optional header name for OTLP auth",
                    "order": 37
                },
                "gitko.otel.token": {
                    "type": "string",
                    "default": "",
                    "description": "Optional token value for OTLP auth header (e.g., Bearer <token>)",
                    "order": 38
                },
                "gitko.security.redact.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Redact sensitive info (emails, tokens, API keys) from logs",
                    "order": 28
                },
                "gitko.security.hmac.enabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Verify HMAC signature on incoming tasks using shared secret",
                    "order": 29
                },
                "gitko.security.hmac.secret": {
                    "type": "string",
                    "default": "",
                    "description": "Shared secret for HMAC verification (not stored securely in settings sync)",
                    "order": 30
                },
                "gitko.security.hmac.signatureField": {
                    "type": "string",
                    "default": "signature",
                    "description": "JSON field containing HMAC signature to verify (removed from payload before hashing)",
                    "order": 31
                },
                "gitko.security.hmac.required": {
                    "type": "boolean",
                    "default": true,
                    "description": "When enabled and secret set, reject tasks missing/invalid signature",
                    "order": 32
                },
                "gitko.security.allowDomains": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": [],
                    "description": "Allowlist of domains for Computer Use URL actions (empty = allow all)",
                    "order": 33
                },
                "gitko.security.allowProcesses": {
                    "type": "array",
                    "items": { "type": "string" },
                    "default": [],
                    "description": "Allowlist of process base names for Computer Use actions (empty = allow all)",
                    "order": 34
                },
                "gitkoAgent.scriptPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to gitko_cli.py script (leave empty for auto-detection)",
                    "order": 2
                },
                "gitkoAgent.workingDirectory": {
                    "type": "string",
                    "default": "",
                    "description": "Working directory for agent execution (leave empty for auto-detection)",
                    "order": 3
                },
                "gitkoAgent.enableLogging": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable detailed logging to Output Channel",
                    "order": 4
                },
                "gitkoAgent.timeout": {
                    "type": "number",
                    "default": 300000,
                    "description": "Timeout for agent execution in milliseconds (default: 5 minutes)",
                    "order": 5
                },
                "gitkoAgent.computerUsePythonPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to Python executable for Computer Use (leave empty to reuse gitkoAgent.pythonPath or auto-detect)",
                    "order": 6
                },
                "gitkoAgent.computerUseScriptPath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to computer_use.py (OCR/RPA backend). Leave empty for default: D:/nas_backup/LLM_Unified/ion-mentoring/computer_use.py",
                    "order": 7
                },
                "gitkoAgent.ocrBackend": {
                    "type": "string",
                    "enum": [
                        "auto",
                        "tesseract",
                        "rapidocr"
                    ],
                    "default": "auto",
                    "description": "OCR backend selection for Computer Use: 'auto' (prefer Tesseract, fallback RapidOCR), or force 'tesseract' / 'rapidocr' if needed.",
                    "order": 8
                },
                "gitko.enableHttpPoller": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable HTTP-based task polling for asynchronous task processing. Requires Task Queue API server running on configured endpoint.",
                    "order": 10
                },
                "gitko.httpApiBase": {
                    "type": "string",
                    "default": "http://localhost:8091/api",
                    "description": "Task Queue API base URL (without trailing slash). Default connects to local API server from Phase 7c.",
                    "order": 11
                },
                "gitko.taskQueueUrl": {
                    "type": "string",
                    "default": "http://127.0.0.1:8091",
                    "description": "Task Queue Server base URL for monitoring",
                    "order": 12
                },
                "gitko.httpPollingInterval": {
                    "type": "number",
                    "default": 2000,
                    "minimum": 500,
                    "maximum": 10000,
                    "description": "Polling interval in milliseconds. Lower values increase responsiveness but use more resources. Minimum 500ms, maximum 10000ms.",
                    "order": 12
                },
                "gitko.enableComputerUseOverHttp": {
                    "type": "boolean",
                    "default": true,
                    "description": "Allow Computer Use actions (scan/find/click/type) to be executed via HTTP task poller. Disable to hard-block any remote desktop actions.",
                    "order": 13
                },
                "gitko.minUiActionIntervalMs": {
                    "type": "number",
                    "default": 150,
                    "minimum": 0,
                    "maximum": 5000,
                    "description": "Minimum interval between UI actions (milliseconds) enforced by the poller for safety. Set higher to slow down automation.",
                    "order": 14
                },
                "gitko.logLevel": {
                    "type": "string",
                    "enum": ["debug", "info", "warn", "error"],
                    "default": "info",
                    "description": "Logging level for Gitko extension",
                    "order": 15
                },
                "gitko.logFormat": {
                    "type": "string",
                    "enum": ["plain", "json"],
                    "default": "plain",
                    "description": "Log output format (plain text or JSON)",
                    "order": 16
                },
                "gitko.separateOutputChannels": {
                    "type": "boolean",
                    "default": false,
                    "description": "Create separate VS Code Output Channels per module (e.g., 'Gitko: HttpTaskPoller')",
                    "order": 17
                },
                "gitko.logToFile": {
                    "type": "boolean",
                    "default": false,
                    "description": "Also write logs to a file on disk",
                    "order": 18
                },
                "gitko.logFilePath": {
                    "type": "string",
                    "default": "",
                    "description": "Path to the log file. If empty, defaults to ~/gitko-agent.log",
                    "order": 19
                },
                "gitko.taskQueueMode": {
                    "type": "string",
                    "enum": ["auto", "poll", "sse"],
                    "default": "auto",
                    "description": "Task queue mode: HTTP polling, Server-Sent Events (SSE), or auto (prefer SSE, fallback to polling)",
                    "order": 20
                },
                "gitko.sse.heartbeatMs": {
                    "type": "number",
                    "default": 15000,
                    "minimum": 1000,
                    "maximum": 60000,
                    "description": "Expected heartbeat interval from server (ms). If no message within this window, SSE reconnects.",
                    "order": 21
                },
                "gitko.sse.maxReconnectAttempts": {
                    "type": "number",
                    "default": 10,
                    "minimum": 0,
                    "maximum": 1000,
                    "description": "Max consecutive reconnect attempts before giving up (0 = unlimited). In auto mode, fallback to polling.",
                    "order": 22
                },
                "gitko.queueAuth.headerName": {
                    "type": "string",
                    "default": "Authorization",
                    "description": "Header name to send auth token for SSE/poll requests (e.g., Authorization).",
                    "order": 23
                },
                "gitko.queueAuth.token": {
                    "type": "string",
                    "default": "",
                    "description": "Auth token value. For Authorization header, include the scheme (e.g., 'Bearer <token>').",
                    "order": 24
                },
                "gitko.offlineQueue.enabled": {
                    "type": "boolean",
                    "default": true,
                    "description": "Enable disk-backed offline result queue when submit fails",
                    "order": 25
                },
                "gitko.offlineQueue.dir": {
                    "type": "string",
                    "default": "",
                    "description": "Directory for offline queue files. Empty = %APPDATA%/gitko/queue",
                    "order": 26
                },
                "gitko.offlineQueue.intervalMs": {
                    "type": "number",
                    "default": 5000,
                    "minimum": 1000,
                    "maximum": 60000,
                    "description": "Background flush interval for offline queue (ms)",
                    "order": 27
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./ && npm run copy-locales",
        "copy-locales": "powershell -Command \"if (!(Test-Path 'out/locales')) { New-Item -ItemType Directory -Path 'out/locales' }; Copy-Item 'src/locales/*.json' 'out/locales/'\"",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile",
        "lint": "eslint src --ext ts",
        "lint:fix": "eslint src --ext ts --fix",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "format:check": "prettier --check \"src/**/*.ts\" \"test/**/*.ts\"",
        "clean": "rimraf out",
        "rebuild": "npm run clean && npm run compile",
        "package": "vsce package",
        "stats": "echo 'Source Files:' && dir /s /b src\\*.ts | find /c \"\\\" && echo 'Total Lines:' && powershell \"Get-Content src\\*.ts | Measure-Object -Line\"",
        "test": "vitest run --reporter=default"
    },
    "devDependencies": {
        "@types/node": "^20.x",
        "@types/vscode": "^1.90.0",
        "@typescript-eslint/eslint-plugin": "^7.18.0",
        "@typescript-eslint/parser": "^7.18.0",
        "eslint": "^8.57.1",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-security": "^3.0.1",
        "vitest": "^2.1.3",
        "prettier": "^3.6.2",
        "typescript": "^5.4.0"
    },
    "dependencies": {
        "axios": "^1.13.1",
        "eventsource": "^2.0.2",
        "zod": "^4.1.12"
    }
}
