{
    "dashboard": {
        "title": "Lumen Gateway v1.0 - ION API Monitoring",
        "tags": [
            "lumen",
            "gateway",
            "ion-api",
            "monitoring"
        ],
        "timezone": "browser",
        "schemaVersion": 30,
        "version": 1,
        "refresh": "30s",
        "time": {
            "from": "now-1h",
            "to": "now"
        },
        "panels": [
            {
                "id": 1,
                "title": "ION API Health Status",
                "type": "stat",
                "gridPos": {
                    "x": 0,
                    "y": 0,
                    "w": 4,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "lumen_ion_health",
                        "refId": "A",
                        "legendFormat": "Health"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "mappings": [
                            {
                                "value": 0,
                                "text": "DOWN",
                                "color": "red"
                            },
                            {
                                "value": 1,
                                "text": "UP",
                                "color": "green"
                            }
                        ],
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 1,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "colorMode": "background",
                    "graphMode": "none",
                    "justifyMode": "center"
                }
            },
            {
                "id": 2,
                "title": "Gateway Lock Status",
                "type": "stat",
                "gridPos": {
                    "x": 4,
                    "y": 0,
                    "w": 4,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "lumen_gateway_status",
                        "refId": "A",
                        "legendFormat": "Gateway"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "mappings": [
                            {
                                "value": 0,
                                "text": "UNLOCKED",
                                "color": "orange"
                            },
                            {
                                "value": 1,
                                "text": "LOCKED",
                                "color": "green"
                            }
                        ],
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "orange"
                                },
                                {
                                    "value": 1,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "colorMode": "background",
                    "graphMode": "none",
                    "justifyMode": "center"
                }
            },
            {
                "id": 3,
                "title": "Mock Mode Indicator",
                "type": "stat",
                "gridPos": {
                    "x": 8,
                    "y": 0,
                    "w": 4,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "lumen_ion_mock_mode",
                        "refId": "A",
                        "legendFormat": "Mock"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "mappings": [
                            {
                                "value": 0,
                                "text": "REAL AI",
                                "color": "green"
                            },
                            {
                                "value": 1,
                                "text": "MOCK",
                                "color": "yellow"
                            }
                        ],
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "green"
                                },
                                {
                                    "value": 1,
                                    "color": "yellow"
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "colorMode": "background",
                    "graphMode": "none",
                    "justifyMode": "center"
                }
            },
            {
                "id": 4,
                "title": "ION API Confidence",
                "type": "gauge",
                "gridPos": {
                    "x": 12,
                    "y": 0,
                    "w": 4,
                    "h": 4
                },
                "targets": [
                    {
                        "expr": "lumen_ion_confidence",
                        "refId": "A",
                        "legendFormat": "Confidence"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "percentunit",
                        "min": 0,
                        "max": 1,
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "red"
                                },
                                {
                                    "value": 0.3,
                                    "color": "yellow"
                                },
                                {
                                    "value": 0.7,
                                    "color": "green"
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "showThresholdLabels": true,
                    "showThresholdMarkers": true
                }
            },
            {
                "id": 5,
                "title": "ION API Response Time",
                "type": "timeseries",
                "gridPos": {
                    "x": 0,
                    "y": 4,
                    "w": 16,
                    "h": 8
                },
                "targets": [
                    {
                        "expr": "lumen_ion_response_time_ms",
                        "refId": "A",
                        "legendFormat": "Response Time (ms)"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "ms",
                        "custom": {
                            "drawStyle": "line",
                            "lineInterpolation": "smooth",
                            "fillOpacity": 10,
                            "showPoints": "auto"
                        },
                        "thresholds": {
                            "mode": "absolute",
                            "steps": [
                                {
                                    "value": 0,
                                    "color": "green"
                                },
                                {
                                    "value": 500,
                                    "color": "yellow"
                                },
                                {
                                    "value": 1000,
                                    "color": "red"
                                }
                            ]
                        }
                    }
                },
                "options": {
                    "tooltip": {
                        "mode": "multi"
                    },
                    "legend": {
                        "displayMode": "list",
                        "placement": "bottom"
                    }
                }
            },
            {
                "id": 6,
                "title": "Resonance Metrics - Phase Diff",
                "type": "timeseries",
                "gridPos": {
                    "x": 0,
                    "y": 12,
                    "w": 8,
                    "h": 6
                },
                "targets": [
                    {
                        "expr": "lumen_phase_diff",
                        "refId": "A",
                        "legendFormat": "Phase Diff"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "min": 0,
                        "max": 1,
                        "custom": {
                            "drawStyle": "line",
                            "lineInterpolation": "smooth",
                            "fillOpacity": 20
                        }
                    }
                },
                "options": {
                    "tooltip": {
                        "mode": "single"
                    },
                    "legend": {
                        "displayMode": "list",
                        "placement": "bottom"
                    }
                }
            },
            {
                "id": 7,
                "title": "Resonance Metrics - Entropy Rate",
                "type": "timeseries",
                "gridPos": {
                    "x": 8,
                    "y": 12,
                    "w": 8,
                    "h": 6
                },
                "targets": [
                    {
                        "expr": "lumen_entropy_rate",
                        "refId": "A",
                        "legendFormat": "Entropy Rate"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "min": 0,
                        "max": 1,
                        "custom": {
                            "drawStyle": "line",
                            "lineInterpolation": "smooth",
                            "fillOpacity": 20
                        }
                    }
                },
                "options": {
                    "tooltip": {
                        "mode": "single"
                    },
                    "legend": {
                        "displayMode": "list",
                        "placement": "bottom"
                    }
                }
            },
            {
                "id": 8,
                "title": "Resonance Metrics - Creative Band",
                "type": "timeseries",
                "gridPos": {
                    "x": 0,
                    "y": 18,
                    "w": 8,
                    "h": 6
                },
                "targets": [
                    {
                        "expr": "lumen_creative_band",
                        "refId": "A",
                        "legendFormat": "Creative Band"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "min": 0,
                        "max": 1,
                        "custom": {
                            "drawStyle": "line",
                            "lineInterpolation": "smooth",
                            "fillOpacity": 20
                        }
                    }
                },
                "options": {
                    "tooltip": {
                        "mode": "single"
                    },
                    "legend": {
                        "displayMode": "list",
                        "placement": "bottom"
                    }
                }
            },
            {
                "id": 9,
                "title": "Resonance Metrics - Risk Band",
                "type": "timeseries",
                "gridPos": {
                    "x": 8,
                    "y": 18,
                    "w": 8,
                    "h": 6
                },
                "targets": [
                    {
                        "expr": "lumen_risk_band",
                        "refId": "A",
                        "legendFormat": "Risk Band"
                    }
                ],
                "fieldConfig": {
                    "defaults": {
                        "unit": "short",
                        "min": 0,
                        "max": 1,
                        "custom": {
                            "drawStyle": "line",
                            "lineInterpolation": "smooth",
                            "fillOpacity": 20
                        }
                    }
                },
                "options": {
                    "tooltip": {
                        "mode": "single"
                    },
                    "legend": {
                        "displayMode": "list",
                        "placement": "bottom"
                    }
                }
            }
        ],
        "annotations": {
            "list": [
                {
                    "name": "Gateway Lock Events",
                    "datasource": "Prometheus",
                    "enable": true,
                    "iconColor": "green",
                    "query": "changes(lumen_gateway_status[1m]) > 0",
                    "tagKeys": "event",
                    "textFormat": "Gateway Status Changed",
                    "titleFormat": "Gateway Event"
                }
            ]
        }
    }
}