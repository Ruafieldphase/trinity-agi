{
    "interval_sec": 5,
    "resources": [
        {
            "name": "queue_server_8091",
            "health": {
                "type": "http",
                "url": "http://127.0.0.1:8091/health",
                "expect": "ok"
            },
            "ensure": {
                "type": "ps1",
                "path": "scripts/ensure_task_queue_server.ps1",
                "args": [
                    "-Port",
                    "8091"
                ]
            },
            "processMatch": "task_queue_server.py",
            "singleton": true,
            "required": true
        },
        {
            "name": "rpa_worker",
            "health": {
                "type": "process",
                "match": "rpa_worker.py",
                "minCount": 1
            },
            "ensure": {
                "type": "ps1",
                "path": "scripts/ensure_rpa_worker.ps1",
                "args": [
                    "-EnforceSingle",
                    "-MaxWorkers",
                    "1"
                ]
            },
            "processMatch": "rpa_worker.py",
            "singleton": true,
            "required": true
        }
    ]
}