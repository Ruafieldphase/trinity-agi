{
    "version": "1.0.0",
    "daemon": {
        "name": "AGI_Master_Daemon",
        "checkInterval": 60,
        "logPath": "C:\\workspace\\agi\\outputs\\master_daemon.log",
        "pidFile": "C:\\workspace\\agi\\outputs\\master_daemon.pid"
    },
    "tasks": {
        "observer_telemetry": {
            "enabled": true,
            "type": "continuous",
            "script": "scripts/observe_desktop_telemetry.ps1",
            "args": [
                "-IntervalSeconds",
                "5"
            ],
            "restartOnFail": true,
            "hidden": true
        },
        "adaptive_scheduler": {
            "enabled": true,
            "type": "interval",
            "script": "scripts/adaptive_master_scheduler.ps1",
            "interval": "PT5M",
            "hidden": true
        },
        "feedback_loop": {
            "enabled": true,
            "type": "interval",
            "script": "scripts/run_feedback_loop_once.ps1",
            "interval": "PT5M",
            "hidden": true
        },
        "morning_kickoff": {
            "enabled": true,
            "type": "daily",
            "script": "scripts/morning_kickoff.ps1",
            "time": "08:00",
            "args": [
                "-Hours",
                "1",
                "-OpenHtml"
            ],
            "hidden": true
        },
        "autopoietic_trinity": {
            "enabled": true,
            "type": "daily",
            "script": "scripts/autopoietic_trinity_cycle.ps1",
            "time": "10:00",
            "args": [
                "-Hours",
                "24"
            ],
            "hidden": true
        },
        "evening_backup": {
            "enabled": true,
            "type": "daily",
            "script": "scripts/end_of_day_backup.ps1",
            "time": "22:00",
            "hidden": true
        },
        "bqi_learner": {
            "enabled": true,
            "type": "daily",
            "script": "fdo_agi_repo/scripts/run_bqi_learner.ps1",
            "time": "03:10",
            "args": [
                "-Phase",
                "6"
            ],
            "hidden": true
        },
        "task_queue_server": {
            "enabled": false,
            "type": "continuous",
            "script": "LLM_Unified/ion-mentoring/task_queue_server.py",
            "pythonVenv": "LLM_Unified/.venv/Scripts/python.exe",
            "args": [
                "--port",
                "8091"
            ],
            "restartOnFail": true,
            "hidden": true,
            "comment": "Disabled: venv not found"
        },
        "rpa_worker": {
            "enabled": true,
            "type": "continuous",
            "script": "fdo_agi_repo/integrations/rpa_worker.py",
            "pythonVenv": "fdo_agi_repo/.venv/Scripts/python.exe",
            "args": [
                "--server",
                "http://127.0.0.1:8091",
                "--interval",
                "0.5"
            ],
            "restartOnFail": true,
            "hidden": true
        },
        "task_watchdog": {
            "enabled": true,
            "type": "continuous",
            "script": "fdo_agi_repo/scripts/task_watchdog.py",
            "pythonVenv": "fdo_agi_repo/.venv/Scripts/python.exe",
            "args": [
                "--server",
                "http://127.0.0.1:8091",
                "--interval",
                "60",
                "--auto-recover"
            ],
            "restartOnFail": true,
            "hidden": true
        }
    },
    "healthChecks": {
        "enabled": true,
        "interval": 300,
        "endpoints": [
            "http://127.0.0.1:8091/api/health"
        ]
    },
    "windowManagement": {
        "enforceHidden": true,
        "monitorInterval": 30,
        "autoHide": true
    }
}